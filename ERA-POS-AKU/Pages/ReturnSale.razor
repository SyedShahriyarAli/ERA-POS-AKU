@inject DialogService DialogService
@inject NotificationService NotificationService

<RadzenTemplateForm TItem="string" Data="@receiptNo" Submit="@SaleReturn">
    <RadzenStack>
        <RadzenRow>
            <RadzenColumn Size="12">
                <RadzenTextBox placeholder="Receipt No" @bind-value="@receiptNo" style="width:100%" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow JustifyContent="JustifyContent.End">
            <RadzenButton Icon="save" Text="Submit" ButtonStyle="ButtonStyle.Primary" Variant="Variant.Flat" ButtonType="ButtonType.Submit"></RadzenButton>
        </RadzenRow>
    </RadzenStack>
</RadzenTemplateForm>

@code {
    string receiptNo;

    void SaleReturn()
    {
        if (receiptNo != "12345")
        {
            NotificationService.Notify(NotificationSeverity.Error, "Error", "Receipt No is not valid");
            return;
        }
        else
        {
            DialogService.Close(receiptNo);
        }
    }
}